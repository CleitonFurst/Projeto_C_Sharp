                    <h5 class="card-title">@Html.DisplayFor(Model => episodio.Nome)</h5>

                </div>
        
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <br />
                       
                        <ld>
                            <a asp-controller="Episodio" asp-action="Read" asp-route-id="@episodio.Id">Assistir</a> |
                            <a asp-controller="Episodio" asp-action="Update" asp-route-id="@episodio.Id">Atualizar</a> |
                            <a asp-controller="Episodio" asp-action="Delete" asp-route-id="@episodio.Id">Deletar</a>
                        </ld>
                        
                    </li>
                </ul>
            </div>
    }

</div>





