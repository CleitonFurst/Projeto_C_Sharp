<div class="row">
    @foreach (Episodio episodio in Model)
    {
            <div class=" card  container flex-lg-shrink-1  " style=" margin-bottom:2rem;  width: 23rem; align-items: center; ">

                <img src="@Html.DisplayFor(Model => episodio.link_img)" class="card-img-top" alt="Img episodio" style="width:300px ; height:200px ; margin-top:20px;">
